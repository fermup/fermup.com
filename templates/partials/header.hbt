<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{:title}}</title>
  <link rel="stylesheet" href="/css/main.css">
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,800|Amatic+SC:700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="pure-container" data-effect="pure-effect-reveal">
    <input type="checkbox" id="pure-toggle-left" class="pure-toggle" data-toggle="left"/>
    <input type="checkbox" id="pure-toggle-right" class="pure-toggle" data-toggle="right"/>

    <nav class="pure-drawer" data-position="left">
      <div class="pure-drawer-purple">
        <!-- Podcast Player -->
            <audio id="music">
              <source src="http://media.blubrry.com/fermup/fermup.com/podcast/audio/fermup-86.mp3" type="audio/mpeg" />
            </audio>
            <div id="audioplayer">
              <div id="timeline">    
                    <div id="playhead"></div>
              </div>
              <button id="pButton" class="play" onclick="play()"></button>
              <button id="previousButton" class="previous" onclick="previous()"></button>
              <button id="nextButton" class="next" onclick="next()"></button>
              <p id="curTimer">00:00</p>
            </div>
        <!-- End Podcast Player -->
        <ul class="now-playing">
          <li>
            <p>86: Fermenting Weeds</p>
          </li>
          <li>
            <p>85: This is a Test</p>
          </li>
          <li>
            <p>84: Another Test</p>
          </li>
          <li>
            <p>83: Yet Another Test</p>
          </li>
        </ul>
      </div>
    </nav>

    <nav class="pure-drawer" data-position="right">
      <div class="pure-drawer-green">
        <h3>FermUp!</h3>
        <ul>
          <li>Podcast</li>
          <li>Tutorials</li>
          <li>Recipes</li>
          <li>Blog</li>
          <li>Contact</li>
        </ul>
      </div>
    </nav>

    <div class="pure-pusher-container">
      <div class="pure-pusher">
        <header>

          <label class="pure-toggle-label" for="pure-toggle-left" data-toggle-label="left"><span class="pure-toggle-arrow">&#60;</span>play</label>
          <label class="pure-toggle-label" for="pure-toggle-right" data-toggle-label="right">menu<span class="pure-toggle-arrow">&#62;</span></label>
          <img class="logo-head" src="/img/fermup-logo-color.svg" alt="Mason jar with glasses">
        </header>
